generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Website {
  id          String   @id @default(uuid())
  title       String
  url         String
  description String?
  iconUrl     String?
  status      String   @default("unknown")
  lastChecked Int      @default(0)
  latency     Int?
  categoryId  String?
  
  category    Category? @relation(fields: [categoryId], references: [id])
}

model Category {
  id       String    @id @default(uuid())
  name     String
  websites Website[]
}

model Config {
  key   String @id
  value String
}
